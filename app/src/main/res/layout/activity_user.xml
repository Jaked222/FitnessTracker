<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jakeduncan.fitnesstracker.UserActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:id="@+id/userView"
        android:layout_marginStart="20dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:id="@+id/distanceView"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:text="Start Walking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/walkingButton"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="21dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="87dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="21dp" />

    <Button
        android:text="Enter Office Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/officeModeButton"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="33dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/walkingButton"
        android:layout_marginRight="33dp" />

    <Button
        android:text="View LeaderBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leaderBoardButton"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="207dp"
        app:layout_constraintTop_toBottomOf="@+id/distanceView"
        android:layout_marginBottom="208dp"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>
